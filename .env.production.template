# =========================================
# Next.js Lead Management Application
# Production Environment Configuration Template
# =========================================

# =========================================
# Supabase Configuration (Required)
# =========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_supabase_anon_key_here

# =========================================
# Application Configuration
# =========================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
PORT=3000
HOSTNAME=0.0.0.0

# CRITICAL: Set this to your production domain URL
# This is used for password reset email redirects
# Production URL: https://dominatelocalleadsai.sliplane.app
NEXT_PUBLIC_SITE_URL=https://dominatelocalleadsai.sliplane.app

# =========================================
# Security Configuration
# =========================================
# Generate a secure random string for this value
# You can use: openssl rand -base64 32
NEXTAUTH_SECRET=your_secure_random_string_here

# Set this to your production domain
NEXTAUTH_URL=https://dominatelocalleadsai.sliplane.app

# =========================================
# Database Configuration (if using direct connections)
# =========================================
# DATABASE_URL=your_database_connection_string_here

# =========================================
# Logging and Monitoring
# =========================================
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true

# Performance Logging Configuration
# Set to 'true' to disable file logging and use console logging only
# Useful for containerized environments with centralized logging
DISABLE_PERFORMANCE_FILE_LOGGING=false

# =========================================
# Rate Limiting (optional)
# =========================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =========================================
# File Upload Configuration (if applicable)
# =========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# =========================================
# External API Configuration (if applicable)
# =========================================
# API_KEY=your_external_api_key_here
# API_BASE_URL=https://api.example.com

# =========================================
# IMPORTANT SECURITY NOTES:
# =========================================
# 1. Never commit this file with actual values to version control
# 2. Use your deployment platform's environment variable system
# 3. Rotate keys regularly
# 4. Use strong, unique values for all secrets
# 5. Consider using encrypted secrets for sensitive data
# =========================================